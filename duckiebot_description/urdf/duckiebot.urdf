<?xml version="1.0"?>
<robot name="duckiebot">
    <!-- link tag'ının içinde kullanacağımız bi tag tanımlayabiliriz hadi material tagıyla blue isimli bi renk tanımlayalım -->
    <material name="blue">
        <color rgba="0 0 0.5 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="grey">
        <color rgba="0.5 0.5 0.5 1"/>
    </material>

    <link name="base_footprint" >
        <origin xyz= "0 0 0" rpy="0 0 0" />
    </link>

    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.34 0.15 0.23"> <!-- length width height in meters. DEĞİŞTİR--> 
                </box> <!-- tek satırlık yerlerde böyle kapatmana gerek yok ama yine de böyle kapattım, originde nasıl kapatmtığımı görürüsün -->
            </geometry>
            <origin xyz= "0 0 0.1" rpy="0 0 0" /> <!-- xyz in translation ve rpy (roll pitch yaw) in rotation. Bu offsettir, z yi sıfır verirsen grid'in üstünde değil içinde kalır. z yi height'ın yarısı verirsen gridin üstünde olur. (on the grand not in the grand)-->
            <material name="blue" />
        </visual>
    </link>

    <link name="right_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.066" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy ="1.57 0 0" />
            <material name="black" />
        </visual>
    </link>

    <link name="left_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.066" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy ="1.57 0 0" />
            <material name="black" />
        </visual>
    </link>

    <link name="caster_wheel_link">
        <visual>
            <geometry>
                <sphere radius="0.033"/>
            </geometry>
            <origin xyz="0 0 0" rpy ="0 0 0" />
            <material name="grey" />
        </visual>
    </link>

    <joint name="base_caster_wheel_joint" type="fixed">
        <parent link="base_link" />
        <child link ="caster_wheel_link" />
        <origin xyz="0.08 0 -0.033" rpy="0 0 0" /> <!-- DEĞİŞTİR, ROBOTUN BOYUTUNA GÖRE AYARLI-->
    </joint>

    <joint name="base_left_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link ="left_wheel_link" />
        <origin xyz="-0.08 0.1 0" rpy="0 0 0" /> <!-- DEĞİŞTİR, ROBOTUN BOYUTUNA GÖRE AYARLI-->
        <axis xyz="0 -1 0"/> 
    </joint>

    <!-- Önce jointi ayarla visuala hiç bakmadan, o doğru oldu mu linkin visual ını değiştir aşko-->
    <joint name="base_right_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link ="right_wheel_link" />
        <origin xyz="-0.08 -0.1 0" rpy="0 0 3.14" /> <!-- DEĞİŞTİR, ROBOTUN BOYUTUNA GÖRE AYARLI-->
        <axis xyz="0 1 0"/> 
    </joint>

    <joint name="base_joint" type="fixed">
        <parent link="base_footprint" />
        <child link ="base_link" />
        <origin xyz="0 0 0.066" rpy="0 0 0" /> <!-- DEĞİŞTİR, ROBOTUN BOYUTUNA GÖRE AYARLI-->
    </joint>


</robot>